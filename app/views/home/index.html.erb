<div class="top_photo" style="background-image: url(<%= asset_path('sound3.jpg') %>)" alt='top_photo'>
</div>

<% @products.each do |product| %>
  <a href="/products/<%= product.id %>">
    <div class="article clearfix">
      <div class="article_left" style='background-image: url(<%= product.photo %>)' alt='sample'>
      </div>
      <div class="article_right">
        <time class="article_time" datetime="投稿日時"><%= product.updated_at %></time>
        <h2 class="article_title"><%= product.name %> の製品ページ</h2>
      </div>
    </div>
  </a>
<% end %>

